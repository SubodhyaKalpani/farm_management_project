            const TitleCase = (string) => {
                let sentence = string.toLowerCase().split(" ");
                for (let i = 0; i < sentence.length; i++) {
                    sentence[i] = sentence[i][0].toUpperCase() + sentence[i].slice(1);
                }

                return sentence.join(" ");
            };
        });

        function OpenMessage() {

            var x = document.getElementById('ChatBoxId');
            if (x.style.display === 'none') {
                x.style.display = 'block';
            } else {
                x.style.display = 'none';
            }
            document.getElementById('txtMeaasge').value = "";
            //disable the button
            document.getElementById("btnSendMessage").disabled = true;
        }

        function TypingMessage() {
            var MessageText = document.getElementById("txtMeaasge").value;
            if (MessageText.length > 0) {
                document.getElementById("btnSendMessage").removeAttribute('disabled');
            }
            else {
                document.getElementById("btnSendMessage").disabled = true;
            }
        }

        function SendMessage() {
            var MessageText = document.getElementById("txtMeaasge").value;
            const dateTime = new Date();
            const datePart = dateTime.toLocaleDateString(undefined, { month: "short", day: "numeric" });
            const timePart = dateTime.toLocaleTimeString();
            const result = `${datePart} ${timePart}`;
            if (MessageText.length > 0) {
                document.getElementById('txtMeaasge').value = "";
                //disable the button
                document.getElementById("btnSendMessage").disabled = true;
                $("#ChatAreaID").append($('<div class="outgoing_msg"><div class="sent_msg"><p>' + MessageText + '</p><span class="time_date"> ' + result + ' </span></div></div>'));

                var objDiv = document.getElementById("ChatAreaID");
                objDiv.scrollTop = objDiv.scrollHeight;

                MessageText = MessageText.toUpperCase();
                $.ajax({
                    url: '@Url.Action("ChatAnswerByQuestion", "ChatBot")',
                    type: "GET",
                    dataType: "JSON",
                    data: { Question: MessageText },
                    success: function (data) {
                        if (data == "No") {
                            $("#ChatAreaID").append($('<div class="incoming_msg"><div class="received_msg"><div class="received_withd_msg"><p> We Will Contact you Soon as possible With Email </p><span class="time_date"> ' + result + ' </span></div></div></div>'));

                            objDiv.scrollTop = objDiv.scrollHeight;
                        }
                        else
                        {
                            $("#ChatAreaID").append($('<div class="incoming_msg"><div class="received_msg"><div class="received_withd_msg"><p>' + data + '</p><span class="time_date"> ' + result + ' </span></div></div></div>'));

                            objDiv.scrollTop = objDiv.scrollHeight;
                        }
                    }
                });
            }
        }

