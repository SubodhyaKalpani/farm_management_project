@model Farm_Management.Models.Product

@{
    ViewBag.Title = "Edit";
}


<div class="container">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Product</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group">
                    @Html.Label("Code")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.pcode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pcode, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.Label("Product Name")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.pdesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.pdesc, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    @Html.Label("Reorder")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.reorder, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.reorder, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.Label("Province")
                    <div class="col-md-10">
                        @Html.DropDownList("Province", (SelectList)ViewBag.Province, "-Province-",
                                                         new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Province, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Category")
                    <div class="col-md-10">
                        @Html.DropDownList("Category_Id", (SelectList)ViewBag.Category, "-Category-",
                                                         new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.Category_Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </article>
    </div>
</div>